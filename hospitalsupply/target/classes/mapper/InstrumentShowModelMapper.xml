<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cuit.hospitalsupply.mapper.InstrumentShowModelMapper">

    <resultMap id="BaseResultMap" type="com.cuit.hospitalsupply.vo.response.InstrumentShowModel">
            <id property="instrumentid" column="instrumentid" jdbcType="VARCHAR"/>
            <result property="supplierid" column="supplierid" jdbcType="VARCHAR"/>
            <result property="suppliername" column="suppliername" jdbcType="VARCHAR"/>
            <result property="instrumentname" column="instrumentname" jdbcType="VARCHAR"/>
            <result property="udi" column="udi" jdbcType="VARCHAR"/>
            <result property="productionTime" column="production_time" jdbcType="DATE"/>
    </resultMap>

    <sql id="Base_Column_List">
        instrumentid,supplierid,suppliername,instrumentname,udi,production_time
    </sql>
    <select id="findWarehousePage" resultType="com.cuit.hospitalsupply.vo.response.InstrumentShowModel">
        select i.instrumentid, i.instrumentname, i.udi, i.production_time, i.supplierid, s.suppliername
        from t_instrument i
        LEFT JOIN t_supplier s on s.supplierid = i.supplierid
        <if test="ew != null">
            ${ew.customSqlSegment}
        </if>
    </select>

</mapper>
